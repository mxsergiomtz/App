mport React, { useState, useEffect, useRef } from 'react';
import {
  View,
  Text,
  StyleSheet,
  TouchableOpacity,
  SafeAreaView,
  Alert,
  Dimensions,
  StatusBar,
  BackHandler,
  Animated,
  ActivityIndicator,
  ImageBackground
} from 'react-native';
import Icon from 'react-native-vector-icons/MaterialIcons';

const { width, height } = Dimensions.get('window');

const ARInventoryScreen = ({ navigation, route }) => {
  const [arReady, setArReady] = useState(false);
  const [inventoryData, setInventoryData] = useState(null);
  const [selectedItem, setSelectedItem] = useState(null);
  const [showInstructions, setShowInstructions] = useState(true);
  
  // Animaciones
  const fadeAnim = useRef(new Animated.Value(0)).current;
  const pulseAnim = useRef(new Animated.Value(1)).current;
  const floatAnim = useRef(new Animated.Value(0)).current;
  
  const { qrCode } = route.params || {};

  useEffect(() => {
    loadInventoryData();
    setupAnimations();
    
    // Manejar bot√≥n de regreso
    const backAction = () => {
      showExitConfirmation();
      return true;
    };

    const backHandler = BackHandler.addEventListener(
      'hardwareBackPress',
      backAction
    );

    // Simular inicializaci√≥n de AR
    const arTimer = setTimeout(() => {
      setArReady(true);
    }, 3000);

    // Ocultar instrucciones despu√©s de 8 segundos
    const instructionTimer = setTimeout(() => {
      setShowInstructions(false);
    }, 8000);

    return () => {
      backHandler.remove();
      clearTimeout(arTimer);
      clearTimeout(instructionTimer);
    };
  }, []);

  const loadInventoryData = () => {
    // Simular carga de datos del inventario basado en QR
    setTimeout(() => {
      const data = {
        itemCode: qrCode || 'DEMO-001',
        itemName: `Producto ${qrCode || 'Demo'}`,
        category: 'Electr√≥nicos',
        currentStock: 45,
        minStock: 20,
        maxStock: 100,
        location: 'Almac√©n A - Estante 3B',
        status: getStockStatus(45, 20, 100),
        lastMovements: [
          { 
            id: 1, 
            date: '2024-12-08', 
            type: 'Entrada', 
            quantity: 20, 
            user: 'Juan P√©rez' 
          },
          { 
            id: 2, 
            date: '2024-12-07', 
            type: 'Salida', 
            quantity: 15, 
            user: 'Mar√≠a Garc√≠a' 
          },
          { 
            id: 3, 
            date: '2024-12-06', 
            type: 'Entrada', 
            quantity: 30, 
            user: 'Carlos L√≥pez' 
          }
        ],
        metrics: {
          rotationDays: 45,
          avgMovement: 12,
          accuracy: 98
        }
      };
      setInventoryData(data);
    }, 1500);
  };

  const getStockStatus = (current, min, max) => {
    if (current <= min) return 'LOW';
    if (current >= max * 0.9) return 'HIGH';
    return 'NORMAL';
  };

  const setupAnimations = () => {
    // Fade in animation
    Animated.timing(fadeAnim, {
      toValue: 1,
      duration: 1000,
      useNativeDriver: true,
    }).start();

    // Pulse animation
    const pulseAnimation = () => {
      Animated.sequence([
        Animated.timing(pulseAnim, {
          toValue: 1.1,
          duration: 1500,
          useNativeDriver: true,
        }),
        Animated.timing(pulseAnim, {
          toValue: 1,
          duration: 1500,
          useNativeDriver: true,
        }),
      ]).start(() => pulseAnimation());
    };

    // Float animation
    const floatAnimation = () => {
      Animated.sequence([
        Animated.timing(floatAnim, {
          toValue: 1,
          duration: 2000,
          useNativeDriver: true,
        }),
        Animated.timing(floatAnim, {
          toValue: 0,
          duration: 2000,
          useNativeDriver: true,
        }),
      ]).start(() => floatAnimation());
    };

    pulseAnimation();
    floatAnimation();
  };

  const showExitConfirmation = () => {
    Alert.alert(
      'Salir de AR',
      '¬øEst√°s seguro de que quieres salir de la vista de realidad aumentada?',
      [
        {
          text: 'Cancelar',
          style: 'cancel'
        },
        {
          text: 'Salir',
          onPress: () => navigation.goBack(),
          style: 'destructive'
        }
      ]
    );
  };

  const showHelp = () => {
    Alert.alert(
      'Simulaci√≥n AR',
      'üì± Esta es una simulaci√≥n de Realidad Aumentada:\n\n' +
      '‚Ä¢ Los objetos 3D se muestran como simulaci√≥n\n' +
      '‚Ä¢ Toca los elementos para ver informaci√≥n\n' +
      '‚Ä¢ Los colores representan diferentes estados\n' +
      '‚Ä¢ üîµ Azul: Stock actual\n' +
      '‚Ä¢ üî¥ Rojo: Stock m√≠nimo\n' +
      '‚Ä¢ üü¢ Verde: Stock m√°ximo\n\n' +
      'Para AR real, se necesitar√≠a una librer√≠a como ARCore.',
      [{ text: 'Entendido' }]
    );
  };

  const toggleInstructions = () => {
    setShowInstructions(!showInstructions);
  };

  const openDetailView = () => {
    navigation.navigate('InventoryDetail', { 
      qrCode: inventoryData.itemCode,
      itemName: inventoryData.itemName 
    });
  };

  const selectItem = (itemType) => {
    setSelectedItem(selectedItem === itemType ? null : itemType);
  };

  const getStatusColor = (status) => {
    switch (status) {
      case 'LOW': return '#F44336';
      case 'HIGH': return '#4CAF50';
      case 'NORMAL': return '#2196F3';
      default: return '#999';
    }
  };

  const getStatusText = (status) => {
    switch (status) {
      case 'LOW': return 'Stock Bajo';
      case 'HIGH': return 'Stock Alto';
      case 'NORMAL': return 'Stock Normal';
      default: return 'Desconocido';
    }
  };

  // Pantalla de carga AR
  if (!arReady || !inventoryData) {
    return (
      <View style={styles.loadingContainer}>
        <StatusBar barStyle="light-content" backgroundColor="#000" />
        
        <Animated.View style={[
          styles.loadingContent,
          { opacity: fadeAnim, transform: [{ scale: pulseAnim }] }
        ]}>
          <ActivityIndicator size="large" color="#2196F3" />
          <Text style={styles.loadingTitle}>Simulando Realidad Aumentada</Text>
          <Text style={styles.loadingSubtext}>
            {inventoryData ? 'Inicializando vista AR simulada...' : 'Cargando datos de inventario...'}
          </Text>
          
          {inventoryData && (
            <View style={styles.itemInfo}>
              <Text style={styles.itemCode}>C√≥digo: {inventoryData.itemCode}</Text>
              <Text style={styles.itemName}>{inventoryData.itemName}</Text>
            </View>
          )}
        </Animated.View>
        
        <TouchableOpacity style={styles.cancelButton} onPress={() => navigation.goBack()}>
          <Icon name="close" size={24} color="#fff" />
          <Text style={styles.cancelText}>Cancelar</Text>
        </TouchableOpacity>
      </View>
    );
  }

  return (
    <View style={styles.container}>
      <StatusBar barStyle="light-content" backgroundColor="transparent" translucent />
      
      {/* Mock AR Background */}
      <ImageBackground
        source={{ uri: 'data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAEAAAABCAYAAAAfFcSJAAAADUlEQVR42mP8/5+hHgAHggJ/PchI7wAAAABJRU5ErkJggg==' }}
        style={styles.arBackground}
      >
        {/* Simulaci√≥n de objetos 3D */}
        <View style={styles.mockArScene}>
          {/* Stock Actual - C√≠rculo central */}
          <Animated.View style={[
            styles.mockObject,
            styles.currentStock,
            {
              backgroundColor: getStatusColor(inventoryData.status),
              transform: [
                { scale: selectedItem === 'current' ? 1.2 : 1 },
                { translateY: floatAnim.interpolate({
                  inputRange: [0, 1],
                  outputRange: [0, -20]
                })}
              ]
            }
          ]}>
            <TouchableOpacity 
              style={styles.mockObjectContent}
              onPress={() => selectItem('current')}
            >
              <Text style={styles.mockObjectTitle}>Stock Actual</Text>
              <Text style={styles.mockObjectValue}>{inventoryData.currentStock}</Text>
              <Text style={styles.mockObjectSubtitle}>unidades</Text>
            </TouchableOpacity>
          </Animated.View>

          {/* Stock M√≠nimo */}
          <Animated.View style={[
            styles.mockObject,
            styles.minStock,
            {
              backgroundColor: '#F44336',
              transform: [
                { scale: selectedItem === 'min' ? 1.2 : 1 },
                { rotate: pulseAnim.interpolate({
                  inputRange: [1, 1.1],
                  outputRange: ['0deg', '5deg']
                })}
              ]
            }
          ]}>
            <TouchableOpacity 
              style={styles.mockObjectContent}
              onPress={() => selectItem('min')}
            >
              <Text style={styles.mockObjectTitle}>M√≠nimo</Text>
              <Text style={styles.mockObjectValue}>{inventoryData.minStock}</Text>
            </TouchableOpacity>
          </Animated.View>

          {/* Stock M√°ximo */}
          <Animated.View style={[
            styles.mockObject,
            styles.maxStock,
            {
              backgroundColor: '#4CAF50',
              transform: [
                { scale: selectedItem === 'max' ? 1.2 : 1 },
                { rotate: pulseAnim.interpolate({
                  inputRange: [1, 1.1],
                  outputRange: ['0deg', '-5deg']
                })}
              ]
            }
          ]}>
            <TouchableOpacity 
              style={styles.mockObjectContent}
              onPress={() => selectItem('max')}
            >
              <Text style={styles.mockObjectTitle}>M√°ximo</Text>
              <Text style={styles.mockObjectValue}>{inventoryData.maxStock}</Text>
            </TouchableOpacity>
          </Animated.View>

          {/* Movimientos recientes */}
          <View style={styles.movementsContainer}>
            {inventoryData.lastMovements.slice(0, 3).map((movement, index) => (
              <Animated.View 
                key={index}
                style={[
                  styles.movementItem,
                  {
                    backgroundColor: movement.type === 'Entrada' ? '#4CAF50' : '#F44336',
                    transform: [
                      { 
                        translateX: floatAnim.interpolate({
                          inputRange: [0, 1],
                          outputRange: [0, index % 2 === 0 ? 10 : -10]
                        })
                      }
                    ]
                  }
                ]}
              >
                <Text style={styles.movementText}>
                  {movement.type}: {movement.quantity > 0 ? '+' : ''}{movement.quantity}
                </Text>
              </Animated.View>
            ))}
          </View>

          {/* Informaci√≥n del item seleccionado */}
          {selectedItem && (
            <Animated.View style={[
              styles.selectedItemInfo,
              { opacity: fadeAnim }
            ]}>
              {selectedItem === 'current' && (
                <Text style={styles.selectedItemText}>
                  Stock Actual: {inventoryData.currentStock} unidades{'\n'}
                  Estado: {getStatusText(inventoryData.status)}{'\n'}
                  √öltima actualizaci√≥n: Hoy
                </Text>
              )}
              {selectedItem === 'min' && (
                <Text style={styles.selectedItemText}>
                  Stock M√≠nimo: {inventoryData.minStock} unidades{'\n'}
                  Alerta cuando stock ‚â§ {inventoryData.minStock}{'\n'}
                  Estado: {inventoryData.currentStock <= inventoryData.minStock ? 'CR√çTICO' : 'OK'}
                </Text>
              )}
              {selectedItem === 'max' && (
                <Text style={styles.selectedItemText}>
                  Stock M√°ximo: {inventoryData.maxStock} unidades{'\n'}
                  Capacidad total del almac√©n{'\n'}
                  Disponible: {inventoryData.maxStock - inventoryData.currentStock} unidades
                </Text>
              )}
            </Animated.View>
          )}
        </View>
      </ImageBackground>
      
      {/* UI Overlay */}
      <SafeAreaView style={styles.overlay}>
        {/* Top Bar */}
        <View style={styles.topBar}>
          <TouchableOpacity style={styles.backButton} onPress={showExitConfirmation}>
            <Icon name="arrow-back" size={24} color="#fff" />
            <Text style={styles.backButtonText}>Salir</Text>
          </TouchableOpacity>
          
          <View style={styles.titleContainer}>
            <Text style={styles.arTitle}>Vista AR (Simulada)</Text>
            <Text style={styles.trackingStatus}>Simulaci√≥n activa</Text>
          </View>
          
          <View style={styles.topActions}>
            <TouchableOpacity style={styles.helpButton} onPress={showHelp}>
              <Icon name="help-outline" size={24} color="#fff" />
            </TouchableOpacity>
            
            <TouchableOpacity style={styles.instructionsButton} onPress={toggleInstructions}>
              <Icon name={showInstructions ? "visibility-off" : "visibility"} size={24} color="#fff" />
            </TouchableOpacity>
          </View>
        </View>

        {/* Instructions Panel */}
        {showInstructions && (
          <Animated.View style={[styles.instructionsPanel, { opacity: fadeAnim }]}>
            <View style={styles.instructionItem}>
              <Icon name="touch-app" size={20} color="#2196F3" />
              <Text style={styles.instructionText}>Toca los objetos virtuales para ver detalles</Text>
            </View>
            <View style={styles.instructionItem}>
              <Icon name="info" size={20} color="#2196F3" />
              <Text style={styles.instructionText}>Esta es una simulaci√≥n de realidad aumentada</Text>
            </View>
            <View style={styles.instructionItem}>
              <Icon name="phone-android" size={20} color="#2196F3" />
              <Text style={styles.instructionText}>Para AR real se necesitar√≠a ARCore/ARKit</Text>
            </View>
          </Animated.View>
        )}

        {/* Bottom Info Panel */}
        <View style={styles.bottomBar}>
          <View style={styles.infoPanel}>
            <View style={styles.infoHeader}>
              <View style={styles.itemDetails}>
                <Text style={styles.infoTitle}>{inventoryData.itemName}</Text>
                <Text style={styles.infoSubtitle}>C√≥digo: {inventoryData.itemCode}</Text>
              </View>
              
              <View style={[
                styles.statusBadge,
                { backgroundColor: getStatusColor(inventoryData.status) }
              ]}>
                <Text style={styles.statusText}>
                  {getStatusText(inventoryData.status)}
                </Text>
              </View>
            </View>
            
            <View style={styles.quickStats}>
              <View style={styles.statItem}>
                <Text style={styles.statValue}>{inventoryData.currentStock}</Text>
                <Text style={styles.statLabel}>Stock Actual</Text>
              </View>
              <View style={styles.statItem}>
                <Text style={styles.statValue}>{inventoryData.metrics.rotationDays}</Text>
                <Text style={styles.statLabel}>D√≠as Rotaci√≥n</Text>
              </View>
              <View style={styles.statItem}>
                <Text style={styles.statValue}>{inventoryData.metrics.accuracy}%</Text>
                <Text style={styles.statLabel}>Precisi√≥n</Text>
              </View>
            </View>
            
            <View style={styles.actionButtons}>
              <TouchableOpacity style={styles.actionButton} onPress={openDetailView}>
                <Icon name="list-alt" size={20} color="#2196F3" />
                <Text style={styles.actionButtonText}>Ver Detalle</Text>
              </TouchableOpacity>
              
              <TouchableOpacity style={styles.actionButton} onPress={() => setShowInstructions(!showInstructions)}>
                <Icon name="help" size={20} color="#FF9800" />
                <Text style={styles.actionButtonText}>Ayuda</Text>
              </TouchableOpacity>
            </View>
          </View>
        </View>
      </SafeAreaView>
    </View>
  );
};

